{
  "name": "solcre/solcre-email-schedule",
  "description": "Base stuff of many internal projects",
  "keywords": [
    "solcre",
    "framework",
    "email",
    "queue",
    "phpmailer"
  ],
  "license": "BSD-3-Clause",
  "require": {
    "php": "^8.3",
    "doctrine/orm": "^3.3",
    "aws/aws-sdk-php": "^3.320",
    "phpmailer/phpmailer": "^6.9",
    "psr/log": "^3.0",
    "smarty/smarty": "^4.3",
    "twig/twig": "^3.8"
  },
  "require-dev": {
    "roave/security-advisories": "dev-latest",
    "phpunit/phpunit": "^12",
    "friendsofphp/php-cs-fixer": "^3.12",
    "squizlabs/php_codesniffer": "^3.10"
  },
  "autoload": {
    "psr-4": {
      "Solcre\\EmailSchedule\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "EmailScheduleTest\\": "./test/"
    }
  },
  "scripts": {
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "test": "phpunit"
  }
}
